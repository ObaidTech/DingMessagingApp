<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/header_bg">
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/defaultdp"
                android:shadowColor="@color/black"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="0"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/display_name"
                android:text="Muhammad Obaidullah"
                android:textSize="24sp"
                android:textColor="@color/app_bg"
                android:shadowColor="@color/black"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_below="@+id/header_container"
            android:background="@drawable/black_fade_out"
            android:layout_height="100dp">
            <LinearLayout
                android:id="@+id/unread_count_container"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="40dp"
                android:orientation="vertical"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/unread_messages_icon"/>
                <TextView
                    android:id="@+id/unread_count"
                    android:text="0"
                    android:textSize="22sp"
                    android:textColor="@color/app_bg"
                    android:shadowColor="@color/black"
                    android:shadowRadius="3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:alpha="0.5"
                android:layout_width="1dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="90dp"
                android:background="@color/white" />
            <LinearLayout
                android:id="@+id/status_container"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_toLeftOf="@+id/unread_count_container"
                android:orientation="vertical"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/status_icon"/>
                <TextView
                    android:id="@+id/curremt_status"
                    android:text="Available to Chat..."
                    android:textSize="16sp"
                    android:textColor="@color/app_bg"
                    android:shadowColor="@color/black"
                    android:shadowRadius="3"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>