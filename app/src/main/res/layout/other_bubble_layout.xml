<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:alpha="0.4"
        android:id="@+id/dp_shadow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/circle_shadow"/>
    <ImageView
        android:id="@+id/user_dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/profile_pic"
        android:shadowColor="@color/black"/>
    <LinearLayout
        android:id="@+id/chat_container"
        android:padding="5dp"
        android:background="@drawable/message_container"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/user_dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message_text"
            android:layout_alignParentLeft="true"
            android:text="Lorem ipsum dolor sit amet, harum volutpat constituto an vim, cu quidam dolorum nam. harum volutpat constituto an vim, cu quidam dolorum nam. harum volutpat constituto an vim, cu quidam dolorum nam. harum volutpat constituto an vim, cu quidam dolorum nam. harum volutpat constituto an vim, cu quidam dolorum nam. harum volutpat constituto an vim, cu quidam dolorum nam. harum volutpat constituto an vim, cu quidam dolorum nam."
            android:textSize="14sp"
            android:textColor="@color/header_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/sent_status"
                android:layout_marginTop="5dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/sent_on"
                android:layout_marginTop="5dp"
                android:text="Oct 31, 5:42 PM via SMS"
                android:textSize="10sp"
                android:textColor="@color/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="-4dp"
        android:layout_toRightOf="@+id/user_dp"
        android:layout_marginTop="25dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/chat_arrow"/>
</RelativeLayout>
